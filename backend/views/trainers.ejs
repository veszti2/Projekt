<!-- backend/views/users.ejs -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Edzőink</title>
        <link
            rel="stylesheet"
            href="/css/trainers.css"
        />
    </head>
    <body>
        <%- include('nav') %>

        <h1>Quater Edző Csapat!</h1>
        <p><a href="/api/new-trainer">Új edző felvétele</a></p>

        <ul id="trainers-list">
    <% trainers.forEach(element => { %>
    <li class="trainer-card">
        
        <!-- KÉPTARTÓ – egységes arány -->
        <div class="trainer-img-wrapper">
            <img class="trainer-img" src="<%= element.kep %>" alt="Edző képe" />
        </div>

        <div class="trainer-info">
            <h2><i class="fas fa-user"></i> <%= element.nev %></h2>
            <p><i class="fas fa-phone"></i> <%= element.elerhetoseg %></p>
        </div>

        <div class="trainer-actions">
            <a class="modosit" href="/api/trainers-backend/<%= element._id %>">
                <i class="fas fa-edit"></i> Módosítás
            </a>
            <button class="torol" onclick="torles('<%= element._id%>')">
                <i class="fas fa-trash"></i> Törlés
            </button>
        </div>
    </li>
    <% }) %>
</ul>
        <script src="/js/trainer-kezel.js"></script>
    </body>
</html>
